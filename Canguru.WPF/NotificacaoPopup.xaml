<Window x:Class="Canguru.WPF.NotificacaoPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notificações"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Width="600" Height="350"
        Background="#FFFDFDFD">

    <Border BorderThickness="1" BorderBrush="#FF2C2B3E" CornerRadius="8">
        <Grid>

            <!-- Cabeçalho -->
            <Grid Background="#1C1B2A" Height="50" VerticalAlignment="Top">
                <TextBlock Text="Notificações"
                           Foreground="White"
                           FontSize="22"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                <!-- Botão fechar -->
                <Button Content="✕"
                        Width="40" Height="30"
                        Background="#F15E5E"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        Click="BtnFechar_Click"/>
            </Grid>

            <!-- Conteúdo principal -->
            <Border BorderBrush="#FF1B1B1B"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="20"
                    Margin="40,90,40,90"
                    VerticalAlignment="Center">
                <TextBlock Text="Você tem [NumQuiz] Quizes para fazer!&#10;Você deseja ir para o quiz?"
                           TextAlignment="Center"
                           FontSize="22"
                           Foreground="Black"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Botões inferiores -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,30"
                        >
                <Button Content="Não"
                        Width="120" Height="50"
                        Background="#F15E5E"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Click="BtnNao_Click"/>
                <Button Content="Sim"
                        Width="120" Height="50"
                        Background="#A4E6B1"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Click="BtnSim_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
