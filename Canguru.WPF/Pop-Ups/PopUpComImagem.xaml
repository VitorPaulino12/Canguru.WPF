<Window x:Class="Canguru.WPF.Pop_Ups.PopUpComImagem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Canguru.WPF.Pop_Ups"
        mc:Ignorable="d"
        Title="Notificação" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="CorLaranjaEscuro" Color="#E59500"/>
        <SolidColorBrush x:Key="CorCinzaClaro" Color="#F0F0F0"/>
    </Window.Resources>

    <Border BorderThickness="1" BorderBrush="#FF2C2B3E" CornerRadius="10">
        <Grid Background="{StaticResource CorCinzaClaro}">

            <!-- CABEÇALHO -->
            <Grid Background="{StaticResource CorLaranjaEscuro}" Height="120" VerticalAlignment="Top">
                <TextBlock x:Name="txtTitulo"
                           Text="Notificação"
                           Foreground="White"
                           FontSize="32"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <Button Content="✕"
                        Width="40" Height="30"
                        Background="#F15E5E"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,10,10,0"
                        Click="BtnFechar_Click"/>
            </Grid>

            <!-- CONTEÚDO + IMAGEM -->
            <Grid Margin="30,140,30,90">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="131*"/>
                    <ColumnDefinition Width="238*"/>
                </Grid.ColumnDefinitions>

                <!-- TEXTO -->
                <Border Grid.Column="1"
                        Background="White"
                        CornerRadius="6"
                        Padding="20"
                        Margin="0,0,15,0">
                    <TextBlock x:Name="txtConteudo"
                               Text="Texto da notificação aqui"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontSize="18"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- IMAGEM -->
                <Border Grid.Column="0"
                        Background="White"
                        CornerRadius="6"
                        Padding="10">
                    <Image x:Name="imgNotificacao"
                           Stretch="Uniform"/>
                </Border>
            </Grid>

            <!-- BOTÕES -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,25">

                <Button x:Name="btnVerde"
                        Content="Confirmar"
                        Width="120" Height="45"
                        Background="#A4E6B1"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="10"
                        Click="BtnConfirmar_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
