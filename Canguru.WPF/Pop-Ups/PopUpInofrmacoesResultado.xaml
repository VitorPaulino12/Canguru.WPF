<Window x:Class="Canguru.WPF.Pop_Ups.PopUpInofrmacoesResultado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notificação"
        Height="300" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent">

    <Border Background="White"
            CornerRadius="16"
            Padding="20">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- ===== COLUNA DO TEXTO ===== -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- TÍTULO -->
                <TextBlock x:Name="txtTitulo"
                           Grid.Row="0"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333333"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>

                <!-- CONTEÚDO -->
                <Border Grid.Row="1"
                        Background="#F5F5F5"
                        CornerRadius="8"
                        Padding="10">

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="txtConteudo"
                                   FontSize="14"
                                   Foreground="#444"
                                   TextWrapping="Wrap"
                                   LineHeight="22"/>
                    </ScrollViewer>
                </Border>

                <!-- BOTÃO -->
                <Button Grid.Row="2"
                        Content="OK"
                        Width="120"
                        Height="36"
                        Margin="0,14,0,0"
                        HorizontalAlignment="Left"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Click="BtnOk_Click"/>
            </Grid>

            <!-- ===== COLUNA DA IMAGEM ===== -->
            <Border Grid.Column="1"
                    Margin="14,0,0,0"
                    Background="#EFEFEF"
                    CornerRadius="12"
                    Padding="10">

                <Viewbox>
                    <Image x:Name="imgPopup"
                           Stretch="Uniform"/>
                </Viewbox>
            </Border>

        </Grid>
    </Border>
</Window>
