<Window x:Class="Canguru.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Canguru.WPF"
        mc:Ignorable="d"
        Title="CANGURUU - Login" 
        Height="720" 
        Width="350" WindowStartupLocation="CenterScreen" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="{StaticResource CorLaranjaPrincipal}" 
                CornerRadius="5">
            <StackPanel VerticalAlignment="Center" Margin="30">

                <Border Width="120" Height="120" CornerRadius="60" Background="White"
                        BorderBrush="Gainsboro" BorderThickness="2" Margin="0,0,0,40">
                </Border>

                <Label Content="Login" Foreground="White" FontSize="14"/>
                <TextBox x:Name="txtLogin" Margin="0,5,0,15"/>

                <Label Content="Senha" Foreground="White" FontSize="14"/>
                <PasswordBox x:Name="txtSenha" Margin="0,5,0,30" KeyDown="txtSenha_KeyDown"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnCadastrar" Grid.Column="0" Content="Cadastrar" Margin="0,0,5,0" 
                            Click="BtnCadastrar_Click"/>

                    <Button x:Name="BtnEntrar" Grid.Column="1" Content="Entrar" Margin="5,0,0,0" 
                            Click="BtnEntrar_Click" IsDefault="True"/>
                </Grid>

            </StackPanel>
        </Border>

    </Grid>
</Window>