<Window x:Class="Canguru.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Canguru.WPF"
        mc:Ignorable="d"
        Title="CANGURUU - Login"
        Height="600" Width="360" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Loaded="Window_Loaded">

    <Grid>
        <Border Background="Transparent" Margin="10">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>
        </Border>

        <Border Background="{StaticResource CorLaranjaPrincipal}"
                CornerRadius="15" Margin="10,10,10,128">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,40,0,20">
                    <TextBlock FontSize="36" FontWeight="Bold" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" Direction="315" Color="Black" Opacity="0.3" BlurRadius="2"/>
                        </TextBlock.Effect>
                        <Run Text="CANG" Foreground="Black"/><Run Text="URUU" Foreground="White"/>
                    </TextBlock>
                    <TextBlock Text="Bem-vindo de volta" Foreground="White" Opacity="0.8" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="30,0,30,30" VerticalAlignment="Center">

                    <TextBlock Text="Login (E-mail ou RA)" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtLogin" Padding="10" FontSize="14" BorderThickness="0" Margin="0,0,0,15" TextChanged="txtLogin_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Senha" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtSenha" Padding="10" FontSize="14" BorderThickness="0" Margin="0,0,0,5" KeyDown="txtSenha_KeyDown">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>

                    <Button x:Name="BtnEsqueceuSenha" Content="Esqueceu a senha?" 
                            HorizontalAlignment="Right" Margin="0,0,0,30"
                            Background="Transparent" BorderThickness="0" Foreground="White" 
                            Cursor="Hand" FontSize="12" Click="BtnEsqueceuSenha_Click" Opacity="0.9">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <TextBlock Text="{TemplateBinding Content}" TextDecorations="Underline" Foreground="{TemplateBinding Foreground}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="BtnSair" Grid.Column="0" Content="Sair" Height="45"
                                Background="{StaticResource CorBotaoCinza}" BorderBrush="White" BorderThickness="2" 
                                Foreground="Black" FontWeight="SemiBold" Cursor="Hand"
                                Click="BtnSair_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button x:Name="BtnEntrar" Grid.Column="2" Content="Entrar" Height="45" 
                                Background="{StaticResource CorBotaoCinza}" Foreground="Black" 
                                FontWeight="SemiBold" FontSize="15" BorderThickness="0" Cursor="Hand" 
                                Click="BtnEntrar_Click" IsDefault="True">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>

                    <Button x:Name="BtnCadastrar" Content="Não tem conta? Cadastre-se" Margin="0,20,0,0"
                            HorizontalAlignment="Center" Background="Transparent" BorderThickness="0" 
                            Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="BtnCadastrar_Click"/>

                </StackPanel>
            </Grid>
        </Border>

        <Border x:Name="LoadingOverlay" Background="#99000000" CornerRadius="15" Visibility="Collapsed" Margin="10">
            <TextBlock Text="Carregando..." Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>