<Window x:Class="Canguru.WPF.EditarPerfilWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atualização de Informações" Height="600" Width="800" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ContentPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="3" Opacity="0.2" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FormButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2D2D3D" Padding="15">
            <TextBlock Text="Atualização de informações" 
                       Foreground="White" FontSize="30" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Grid Grid.Row="1" Background="#D27D2D">

            <Border Style="{StaticResource ContentPanel}" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0" VerticalAlignment="Center">
                        <Ellipse Width="150" Height="150" Margin="10">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="imgPerfil" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <Button x:Name="btnEnviarFoto" Content="Trocar Foto" 
                                Style="{StaticResource FormButton}" Background="#50E3C2" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" MinWidth="300" VerticalAlignment="Center">
                        <TextBlock Text="Nome:" FontSize="16" Margin="0,5,0,2"/>
                        <TextBox x:Name="txtNome" FontSize="16" Padding="5"/>

                        <TextBlock Text="E-mail:" FontSize="16" Margin="0,10,0,2"/>
                        <TextBox x:Name="txtEmail" FontSize="16" Padding="5"/>

                        <TextBlock Text="Nova Senha (opcional):" FontSize="16" Margin="0,10,0,2"/>
                        <PasswordBox x:Name="txtSenha" FontSize="16" Padding="5"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#2D2D3D" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnCancelarAtualiza" Content="Cancelar" 
                        Style="{StaticResource FormButton}" Background="#E84C4C" Click="btnCancelarAtualiza_Click"/>
                <Button x:Name="btnConfirmarAtualiza" Content="Confirmar Atualização" 
                        Style="{StaticResource FormButton}" Background="#7ED321"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>