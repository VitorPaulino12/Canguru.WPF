<Window x:Class="Canguru.WPF.PerfilWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Perfil do Usuário" Height="720" Width="1080" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ContentPanel" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style x:Key="FooterButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#2D2D3D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnVoltar" Grid.Column="0" Content="&lt;" 
                    Background="#E89C4C" Foreground="White" 
                    FontSize="24" FontWeight="Bold" Margin="10" Padding="15,5" BorderThickness="0"/>
            <TextBlock Grid.Column="1" Text="Perfil" 
                       Foreground="White" FontSize="30" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1" Background="#E89C4C">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Border Style="{StaticResource ContentPanel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Grid.Column="0" Width="120" Height="120" Margin="10">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="imgPerfil" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <Border Grid.Column="1" Background="#F0F0F0" CornerRadius="10" Padding="10" Margin="5">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock x:Name="txtNomeUsuario" Text="Administrador" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock x:Name="txtEmail" Text="E-mail: Admin.Canguru@fatec.com" FontSize="14"/>
                                <TextBlock x:Name="txtRA" Text="RA: 123456" FontSize="14"/>
                                <TextBlock x:Name="txtTipoUsuario" Text="Tipo usuário: Professor" FontSize="14"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource ContentPanel}" MinHeight="200">
                    <StackPanel>
                        <TextBlock x:Name="NomeUsuarioLogado" Text="Sobre mim:" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtSobreMim" Text="Me Edite" FontSize="14" TextWrapping="Wrap" Visibility="Visible"/>
                        <TextBox x:Name="txtEditSobreMim" FontSize="14" TextWrapping="Wrap" AcceptsReturn="True" Height="100" Visibility="Collapsed" BorderBrush="#E89C4C" BorderThickness="1" Padding="5"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Border Grid.Column="1" Style="{StaticResource ContentPanel}">
                <StackPanel>
                    <TextBlock Text="Histórico de Posts" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <Border Background="#F0F0F0" CornerRadius="5" Padding="10" Margin="0,5">
                        <TextBlock Text="Últimos posts do usuário" FontSize="16"/>
                    </Border>
                    <ListBox x:Name="lstFeed" Margin="0,10,0,0" BorderThickness="0" Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Margin="0,5" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Titulo}" FontSize="14" FontWeight="Normal" TextWrapping="Wrap" Foreground="#333"/>
                                        <TextBlock Text="{Binding DataFormatada}" FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#2D2D3D" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnEditarInformacoes" Content="Editar Informações de Cadastro" 
                        Style="{StaticResource FooterButton}" Background="#4A90E2" Click="btnEditarInformacoes_Click"/>
                <Button x:Name="btnEditarSobreMim" Content="Editar 'Sobre mim'" 
                        Style="{StaticResource FooterButton}" Background="#50E3C2" Click="btnEditarSobreMim_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>