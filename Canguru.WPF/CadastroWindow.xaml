<Window x:Class="Canguru.WPF.CadastroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Cadastro - Canguru" Height="680" Width="400"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Grid>
        <Border Background="Transparent" Margin="10">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>
        </Border>

        <Border Background="{StaticResource CorLaranjaPrincipal}"
                CornerRadius="15" Margin="10">

            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,20">
                    <Border Width="110" Height="110" CornerRadius="100" BorderBrush="White" BorderThickness="3">
                        <Border.Background>
                            <ImageBrush x:Name="FotoBrush" Stretch="UniformToFill" ImageSource="https://cdn-icons-png.flaticon.com/512/847/847969.png"/>
                        </Border.Background>
                    </Border>

                    <Button Content="Alterar Foto" Margin="0,10,0,0" Padding="15,4" 
                            Background="White" BorderThickness="0" FontWeight="Bold" Foreground="{StaticResource CorLaranjaPrincipal}"
                            Click="BtnEscolherFoto_Click" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="1" VerticalAlignment="Center">

                    <TextBlock Text="Nome Completo:" FontWeight="Bold" Foreground="White" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtNome" Padding="8" Margin="0,0,0,10" BorderThickness="0">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Email (Login):" FontWeight="Bold" Foreground="White" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtEmail" Padding="8" Margin="0,0,0,10" BorderThickness="0" 
                             TextChanged="txtEmail_TextChanged" 
                             PreviewKeyDown="txtEmail_PreviewKeyDown">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="RA (Registro Acadêmico):" FontWeight="Bold" Foreground="White" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtRA" Padding="8" Margin="0,0,0,2" BorderThickness="0" ToolTip="Comece com 1 (Aluno) ou 2 (Professor)">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock Text="*Inicie com 1 para Aluno ou 2 para Professor" FontSize="11" Foreground="White" Opacity="0.8" Margin="0,0,0,10" FontStyle="Italic"/>

                    <TextBlock Text="Senha:" FontWeight="Bold" Foreground="White" Margin="0,0,0,3"/>
                    <PasswordBox x:Name="txtSenhaCadastro" Padding="8" Margin="0,0,0,10" BorderThickness="0">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>

                    <TextBlock Text="Confirmar Senha:" FontWeight="Bold" Foreground="White" Margin="0,0,0,3"/>
                    <PasswordBox x:Name="txtConfirmarSenha" Padding="8" Margin="0,0,0,5" BorderThickness="0">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>

                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,5">

                    <Button Content="Cancelar" Width="110" Height="40" Margin="0,0,15,0" 
                            Background="Transparent" BorderBrush="White" BorderThickness="2" Foreground="White" FontWeight="SemiBold"
                            Click="BtnCancelar_Click" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="Salvar Cadastro" Width="140" Height="40" FontWeight="SemiBold" 
                            Background="{StaticResource CorBotaoCinza}" Foreground="Black" BorderThickness="0"
                            Click="BtnSalvarCadastro_Click" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>