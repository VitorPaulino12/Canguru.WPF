<Window x:Class="Canguru.WPF.CadastroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Canguru.WPF"
        mc:Ignorable="d"
        Title="CANGURUU - Cadastro" Height="515" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource CorLaranjaPrincipal}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">

                    <TextBlock Text="Criar Nova Conta" FontSize="24" FontWeight="Bold"
                               Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <Label Content="Nome Completo:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtNome" Margin="0,0,0,15"/>

                    <Label Content="Email:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEmail" Margin="0,0,0,15"/>

                    <Label Content="Senha:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtSenhaCadastro" Margin="0,0,0,15"/>

                    <Label Content="Confirmar Senha:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtConfirmarSenha" Margin="0,0,0,25"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="BtnCancelar" Grid.Column="0" Content="Cancelar"
                                Margin="233,35,172,-35" Click="BtnCancelar_Click" IsCancel="True" Grid.ColumnSpan="2"/>

                        <Button x:Name="BtnSalvarCadastro" Grid.Column="1" Content="Salvar Cadastro"
                                Margin="135,35,5,-35" Click="BtnSalvarCadastro_Click" IsDefault="True"/>

                        <CheckBox x:Name="chkProfessor" Content="É um professor?" Margin="5" Checked="chkProfessor_Checked" />
                    </Grid>
                        
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" Background="LightGray" Padding="30">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <Label Content="Foto de Perfil (Opcional)" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,15"/>

                <Border x:Name="imgBorder" Width="150" Height="150" CornerRadius="75" Background="White"
                        BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,20">
                    <Image x:Name="imgPerfil" Stretch="UniformToFill"/>
                    <Border.Clip>
                        <EllipseGeometry Center="75,75" RadiusX="75" RadiusY="75"/>
                    </Border.Clip>
                </Border>

                <Button x:Name="BtnEscolherFoto" Content="Escolher Foto..."
                        HorizontalAlignment="Center" Click="BtnEscolherFoto_Click"/>

            </StackPanel>
        </Border>

    </Grid>
</Window>
