<Window x:Class="Canguru.WPF.MainGerentSessao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sessões CRUD" Height="760" Width="1280" WindowStartupLocation="CenterScreen"
        Background="#FFF4F4F4" ResizeMode="NoResize">

    <Grid>
        <!-- Colunas principais -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--  LATERAL (COLUNA 0)-->
        <Grid Grid.Column="0" Background="#1E1B2E">
            <!-- Botão Voltar -->
            <Button Content="&lt;" Width="35" Height="35"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Margin="20,20,0,0"
                    FontWeight="Bold"
                    FontSize="18"
                    Foreground="White"
                    Background="#DD8431"
                    BorderThickness="0" Click="Button_Click"/>

            <!-- Título Sessões -->
            <Border Background="#DD8431" CornerRadius="10"
                    Margin="20,80,20,0" Height="45" VerticalAlignment="Top">
                <TextBlock Text="Sessões"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"/>
            </Border>

            <!-- Lista de Sessões - container laranja -->
            <Border Background="#DD8431" CornerRadius="10"
                    Margin="20,130,20,80">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Cabeçalho -->
                    <DockPanel Grid.Row="0" Margin="10,5,10,5">
                        <TextBlock Text="Nome" Foreground="White" FontWeight="Bold" Width="120"/>
                        <TextBlock Text="N° perguntas" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right"/>
                    </DockPanel>

                    <!--  -->
                    <Border Grid.Row="0" Background="White" CornerRadius="15" Padding="10" Margin="10,28,10,7">
                        <StackPanel>
                            <ListView x:Name="ListaDeSessoes" BorderThickness="0" MaxHeight="400" SelectionChanged="ListaDeSessoes_SelectionChanged">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" BorderBrush="#D97A22" BorderThickness="1" Margin="0,0,0,6" Padding="6"
                                                x:Name="borderSessao">
                                            <StackPanel>
                                                <TextBlock Text="{Binding NomeSessao}" FontWeight="Bold" FontSize="12" Foreground="#D97A22"/>
                                                <TextBlock Text="{Binding descricaoSessao}" FontSize="11" Foreground="Gray" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" FontSize="10" Foreground="DarkBlue"/>
                                            </StackPanel>
                                        </Border>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                                <Setter TargetName="borderSessao" Property="Background" Value="#FFF0E0"/>
                                                <Setter TargetName="borderSessao" Property="BorderThickness" Value="2"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- Rodapé (botões) -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10">
                        <Button Width="60" Height="30" Background="#A5D6A7" Foreground="White" Content="Atualizar" BorderThickness="0" Click="btnAttSessao_Click" Margin="2,0"/>
                        <Button Width="60" Height="30" Background="#E57A73" Foreground="White" Content="Excluir" BorderThickness="0" Click="Button_Click_2" Margin="2,0"/>
                        <Button Width="60" Height="30" Background="#A5D6A7" Foreground="White" Content="Adicionar" BorderThickness="0" Click="Button_Click_4" Margin="2,0"/>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cabeçalho -->
            <Border Background="#DD8431" Grid.Row="0">
                <TextBlock Text="Sessões CRUD"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"/>
            </Border>

            <!-- Sessão Selecionada -->
            <Border Grid.Row="1" Background="#E8F5E8" Margin="20,10,20,0" CornerRadius="5" Padding="10">
                <TextBlock x:Name="lblSessaoSelecionada" Text="Nenhuma sessão selecionada"
                           FontWeight="Bold" Foreground="#2E7D32" HorizontalAlignment="Center"/>
            </Border>

            <!-- Área de Perguntas e Adicionar -->
            <Grid Grid.Row="2" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Painel Perguntas (col 0) -->
                <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="15" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <Border Background="#DD8431" CornerRadius="15" Margin="20,20,20,10" Padding="10">
                                <TextBlock Text="Perguntas da Sessão" HorizontalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            </Border>
                            <ScrollViewer Margin="20,0,20,20">
                                <StackPanel x:Name="ListaPerguntas"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Painel Adicionar/Editar Pergunta (col 1) -->
                <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="15" Margin="10" Grid.Column="1">
                    <Grid Margin="20">
                        <StackPanel>
                            <Border Background="#DD8431" CornerRadius="15" Margin="0,0,0,30" Padding="10">
                                <TextBlock Text="Adicionar pergunta" HorizontalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            </Border>

                            <!-- Campos -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Enunciado" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox x:Name="txtEnunciado" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Alternativa 1" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox x:Name="txtAlternativa1" Height="28" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Alternativa 2" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox x:Name="txtAlternativa2" Height="28" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Alternativa 3" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox x:Name="txtAlternativa3" Height="28" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Alternativa 4" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox x:Name="txtAlternativa4" Height="28" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Alternativa correta (0-3)" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox x:Name="txtAlternativaCorreta" Height="28" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" RenderTransformOrigin="0.505,0.459" Width="402" >
                                <Button x:Name="btnLimpar" Width="90" Height="30" Background="#8E7CC3" Foreground="White" Content="Limpar" BorderThickness="0" Margin="9" Click="Button_Click_3"/>
                                <Button x:Name="btnSalvar" Width="90" Height="30" Background="#A5D6A7" Foreground="White" Content="Salvar" BorderThickness="0" Margin="9" Click="Button_Click_1"/>
                                <Button x:Name="btnAtualizarPergunta" Width="90" Height="30" Background="#FFA726" Foreground="White" Content="Atualizar" BorderThickness="0" Margin="9" Click="btnAtualizarPergunta_Click"/>
                                <Button x:Name="btnExcluirPergunta" Width="50" Height="30" Background="#FFA726" Foreground="White" Content="Exluír" BorderThickness="0" Margin="9" Click="btnAtualizarPergunta_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

    </Grid>
</Window>