<Window x:Class="Canguru.WPF.MainGerentSessao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sessões CRUD" Height="720" Width="1280" WindowStartupLocation="CenterScreen"
        Background="#FFF4F4F4" ResizeMode="NoResize">

    <Grid>
        <!-- Colunas principais -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Painel Lateral -->
        <Grid Background="#1E1B2E">
            <!-- Botão Voltar -->
            <Button Content="&lt;" Width="35" Height="35" 
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Margin="20,20,0,0"
                    FontWeight="Bold"
                    FontSize="18"
                    Foreground="White"
                    Background="#DD8431"
                    BorderThickness="0" Click="Button_Click"/>

            <!-- Título Sessões -->
            <Border Background="#DD8431" CornerRadius="10" 
                    Margin="20,80,20,0" Height="45" VerticalAlignment="Top">
                <TextBlock Text="Sessões" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"/>
            </Border>

            <!-- Lista de Sessões -->
            <Border Background="#DD8431" CornerRadius="10" 
                    Margin="20,130,20,80">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="463"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- Cabeçalho -->
                    <DockPanel Grid.Row="0" Margin="10,5,10,5">
                        <TextBlock Text="Nome" Foreground="White" FontWeight="Bold" Width="120"/>
                        <TextBlock Text="N° perguntas" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right"/>
                    </DockPanel>

                    <!-- Conteúdo todas as sessões cadastradas no sistema-->
                    <Border Background="White" CornerRadius="15" Padding="10" Margin="10,28,10,7">
                        <StackPanel>
                            <ListView x:Name="ListaDeSessoes" BorderThickness="0" MaxHeight="400" SelectionChanged="ListaDeSessoes_SelectionChanged">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" BorderBrush="#D97A22" BorderThickness="1" Margin="0,0,0,6" Padding="6">
                                            <StackPanel>
                                                <TextBlock Text="{Binding NomeSessao}" FontWeight="Bold" FontSize="10" Foreground="#D97A22"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                </Grid>
            </Border>

            <!-- Botões Inferiores -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,45">
                <Button Width="80" Height="30" Background="#E57A73" Foreground="White" Content="Excluir" BorderThickness="0"/>
                <Button Width="80" Height="30" Background="#A5D6A7" Foreground="White" Content="Adicionar" BorderThickness="0" Click="Button_Click_4"/>
            </StackPanel>
        </Grid>

        <!-- Conteúdo Principal -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cabeçalho -->
            <Border Background="#DD8431" Grid.Row="0">
                <TextBlock Text="Sessões CRUD"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"/>
            </Border>

            <!-- Área de Perguntas e Adicionar -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Painel Perguntas -->
                <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="15" Margin="10">
                    <Grid>
                        <StackPanel>
                            <Border Background="#DD8431" CornerRadius="15" Margin="20,20,20,10" Padding="10">
                                <TextBlock Text="Perguntas" HorizontalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            </Border>
                            <ScrollViewer Margin="20,0,20,20">
                                <StackPanel x:Name="ListaPerguntas"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Painel Adicionar Pergunta -->
                <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="15" Margin="10" Grid.Column="1">
                    <Grid Margin="20">
                        <StackPanel>
                            <Border Background="#DD8431" CornerRadius="15" Margin="0,0,0,30" Padding="10">
                                <TextBlock Text="Adicionar pergunta" HorizontalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            </Border>

                            <!-- Os campos onde o usuário entra com ifnromação -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock x:Name="txtEnunciado" Text="Enunciado" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox Height="28" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock x:Name="txtaAlternUm" Text="Alternativa 1" Foreground="Black" FontWeight="SemiBold"  Margin="5,0,0,2"/>
                                <TextBox Height="28" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock x:Name="txtaAlterndois" Text="Alternativa 2" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox Height="28" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock x:Name="txtaAlterntres" Text="Alternativa 3" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox Height="28" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock x:Name="txtaAlternquatr" Text="Alternativa 4" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox Height="28" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock x:Name="txtaAlternCorret" Text="Alternativa correta" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox Height="28" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" RenderTransformOrigin="0.505,0.459" >
                                <Button x:Name="btnAtualizar" Width="112" Height="30" Background="#8E7CC3" Foreground="White" Content="Atualizar" BorderThickness="0" Margin="9" Click="Button_Click_3"/>
                                <Button x:Name="btnExcluir" Width="111" Height="30" Background="#E57A73" Foreground="White" Content="Excluir" BorderThickness="0" Margin="9" Click="Button_Click_2"/>
                                <Button x:Name="btnSalvar" Width="112" Height="30" Background="#A5D6A7" Foreground="White" Content="Salvar" BorderThickness="0" Margin="9" Click="Button_Click_1"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
