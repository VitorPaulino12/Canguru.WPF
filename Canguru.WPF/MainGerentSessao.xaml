<Window x:Class="Canguru.WPF.MainGerentSessao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sessões CRUD" Height="700" Width="1000" WindowStartupLocation="CenterScreen"
        Background="#FFF4F4F4" ResizeMode="NoResize">

    <Grid>
        <!-- Colunas principais -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LATERAL (COLUNA 0) -->
        <Grid Grid.Column="0" Background="#1E1B2E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Botão Voltar -->
            <Button Grid.Row="0" Content="&lt;" Width="30" Height="30"
                    HorizontalAlignment="Left"
                    Margin="15,15,0,0"
                    FontWeight="Bold"
                    FontSize="16"
                    Foreground="White"
                    Background="#DD8431"
                    BorderThickness="0" Click="Button_Click"/>

            <!-- Título Sessões -->
            <Border Grid.Row="1" Background="#DD8431" CornerRadius="8"
                    Margin="15,10,15,10" Height="35">
                <TextBlock Text="Sessões"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"/>
            </Border>

            <!-- Lista de Sessões -->
            <Border Grid.Row="2" Background="#DD8431" CornerRadius="8" Margin="15,0,15,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Cabeçalho -->
                    <DockPanel Grid.Row="0" Margin="8,6,8,4" Background="#DD8431">
                        <TextBlock Text="Nome" Foreground="White" FontWeight="Bold" Width="100"/>
                        <TextBlock Text="N° perguntas" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right"/>
                    </DockPanel>

                    <!-- Lista -->
                    <Border Grid.Row="1" Background="White" CornerRadius="8" Margin="8,0,8,8" Padding="4">
                        <ListView x:Name="ListaDeSessoes" BorderThickness="0" SelectionChanged="ListaDeSessoes_SelectionChanged"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="6" BorderBrush="#D97A22" BorderThickness="1" Margin="0,2,0,2" Padding="4"
                                            x:Name="borderSessao">
                                        <StackPanel>
                                            <TextBlock Text="{Binding NomeSessao}" FontWeight="Bold" FontSize="11" Foreground="#D97A22"/>
                                            <TextBlock Text="{Binding descricaoSessao}" FontSize="10" Foreground="Gray" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" FontSize="9" Foreground="DarkBlue"/>
                                        </StackPanel>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                            <Setter TargetName="borderSessao" Property="Background" Value="#FFF0E0"/>
                                            <Setter TargetName="borderSessao" Property="BorderThickness" Value="2"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </Grid>
            </Border>

                    <!-- Rodapé (botões) -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10">
                        <Button Width="60" Height="30" Background="#A5D6A7" Foreground="White" Content="Atualizar" BorderThickness="0" Click="btnAttSessao_Click" Margin="2,0"/>
                        <Button Width="60" Height="30" Background="#E57A73" Foreground="White" Content="Excluir" BorderThickness="0" Click="Button_Click_2" Margin="2,0"/>
                        <Button Width="60" Height="30" Background="#A5D6A7" Foreground="White" Content="Adicionar" BorderThickness="0" Click="Button_Click_4" Margin="2,0"/>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cabeçalho -->
            <Border Grid.Row="0" Background="#DD8431">
                <TextBlock Text="Sessões CRUD"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White" Padding="10"/>
            </Border>

            <!-- Sessão Selecionada -->
            <Border Grid.Row="1" Background="#E8F5E8" Margin="15,8,15,5" CornerRadius="4" Padding="8">
                <TextBlock x:Name="lblSessaoSelecionada" Text="Nenhuma sessão selecionada"
                           FontWeight="Bold" Foreground="#2E7D32" HorizontalAlignment="Center" FontSize="12"/>
            </Border>

            <!-- Área de Perguntas -->
            <Grid Grid.Row="2" Margin="10,5,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Lista de Perguntas -->
                <Border Grid.Column="0" Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="12" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#DD8431" CornerRadius="10" Margin="10,10,10,5" Padding="8">
                            <TextBlock Text="Perguntas da Sessão" HorizontalAlignment="Center" 
                                       Foreground="White" FontSize="14" FontWeight="Bold"/>
                        </Border>

                        <ScrollViewer Grid.Row="1" Margin="10,5,10,10" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="ListaPerguntas"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Formulário de Pergunta -->
                <Border Grid.Column="1" Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="12" Margin="5">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Título -->
                        <Border Grid.Row="0" Background="#DD8431" CornerRadius="10" Margin="0,5,0,10" Padding="8">
                            <TextBlock Text="Adicionar pergunta" HorizontalAlignment="Center" 
                                       Foreground="White" FontSize="14" FontWeight="Bold"/>
                        </Border>

                        <!-- Campos do Formulário -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10" Height="380">
                            <StackPanel>
                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock Text="Enunciado" Foreground="Black" FontWeight="SemiBold" Margin="2,0,0,2" FontSize="11"/>
                                    <TextBox x:Name="txtEnunciado" Height="80" TextWrapping="Wrap" AcceptsReturn="True" FontSize="11"/>
                                </StackPanel>

                            <!-- Campos -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Enunciado" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox x:Name="txtEnunciado" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Alternativa 1" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox x:Name="txtAlternativa1" Height="28" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Alternativa 2" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox x:Name="txtAlternativa2" Height="28" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Alternativa 3" Foreground="Black" FontWeight="SemiBold" Margin="5,0,0,2"/>
                                <TextBox x:Name="txtAlternativa3" Height="28" />
                            </StackPanel>

                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Alternativa correta (0-3)" Foreground="Black" FontWeight="SemiBold" Margin="2,0,0,2" FontSize="11"/>
                                    <TextBox x:Name="txtAlternativaCorreta" Height="28" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" RenderTransformOrigin="0.505,0.459" Width="402" >
                                <Button x:Name="btnLimpar" Width="90" Height="30" Background="#8E7CC3" Foreground="White" Content="Limpar" BorderThickness="0" Margin="9" Click="Button_Click_3"/>
                                <Button x:Name="btnSalvar" Width="90" Height="30" Background="#A5D6A7" Foreground="White" Content="Salvar" BorderThickness="0" Margin="9" Click="Button_Click_1"/>
                                <Button x:Name="btnAtualizarPergunta" Width="90" Height="30" Background="#FFA726" Foreground="White" Content="Atualizar" BorderThickness="0" Margin="9" Click="btnAtualizarPergunta_Click"/>
                                <Button x:Name="btnExcluirPergunta" Width="50" Height="30" Background="#FFA726" Foreground="White" Content="Exluír" BorderThickness="0" Margin="9" Click="btnAtualizarPergunta_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>