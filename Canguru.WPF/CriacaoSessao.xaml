<Window x:Class="Canguru.WPF.CriacaoSessao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adicionar Sessão"
        Height="411" Width="434"
        WindowStartupLocation="CenterScreen"
        Background="#FFF4F4F4">

    <Grid Margin="20,0,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="141"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Column="1" Text="Adicionar Sessão" FontSize="18" FontWeight="Bold" Foreground="#D97A22" HorizontalAlignment="Center" Margin="0,0,0,20" Width="142"/>
        <Border Grid.RowSpan="4" Grid.Column="0" Background="#D97A22" CornerRadius="10" Margin="0,0,15,-18">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="A" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Text="D" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Text="D" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,5"/>
            </StackPanel>
        </Border>

        <!-- Campo Nome  da sessao-->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,10,0,10">
            <TextBlock Text="Nome da Sessão" Margin="0,0,0,5"/>
            <TextBox x:Name="txtNomeSessao" Height="30" Padding="5"
                     Background="White" BorderBrush="#CCC" BorderThickness="1"/>
        </StackPanel>

        <!-- Campo Descrição -->
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,10,0,10">
            <TextBlock Text="Descrição da Sessão" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescricaoSessao" Height="126" Padding="5"
                     TextWrapping="Wrap" AcceptsReturn="True"
                     Background="White" BorderBrush="#CCC" BorderThickness="1"/>
        </StackPanel>

        <!-- Botões -->
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,10,0,0" Width="210">
            <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Margin="0,0,10,0"
                    Background="#E57373" Foreground="White" FontWeight="Bold"
                    Click="btnCancelar_Click"/>
            <Button x:Name="btnSalvar" Content="Salvar" Width="100"
                    Background="#81C784" Foreground="White" FontWeight="Bold" Click="btnSalvar_Click"/>
        </StackPanel>
    </Grid>
</Window>