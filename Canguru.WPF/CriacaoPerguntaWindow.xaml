<Window x:Class="Canguru.Telas.TelaCriacaoPergunta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Criação de Perguntas" Height="600" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Criar Nova Pergunta" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Pergunta -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Pergunta:" 
                   VerticalAlignment="Top" Margin="0,0,10,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtPergunta" 
                 Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

        <!-- Alternativas -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Alternativa A:" 
                   Margin="0,0,10,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtAlternativaA" 
                 Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Alternativa B:" 
                   Margin="0,0,10,5"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtAlternativaB" 
                 Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Alternativa C:" 
                   Margin="0,0,10,5"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtAlternativaC" 
                 Margin="0,0,0,10"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Alternativa D:" 
                   Margin="0,0,10,5"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtAlternativaD" 
                 Margin="0,0,0,10"/>

        <!-- Resposta Correta -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Resposta Correta:" 
                   Margin="0,0,10,5"/>
        <ComboBox Grid.Row="6" Grid.Column="1" x:Name="cmbResposta" 
                  Margin="0,0,0,20" Height="25"/>

        <!-- Botões -->
        <StackPanel Grid.Row="10" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="btnAdicionar" Content="Adicionar Pergunta" 
                    Click="btnAdicionar_Click" Width="120" Height="30" 
                    Margin="5,0"/>
            <Button x:Name="btnLimpar" Content="Limpar Campos" 
                    Click="btnLimpar_Click" Width="100" Height="30" 
                    Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>